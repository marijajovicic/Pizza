@using Pizzeria.Helper
@{
    var isLogged = !SessionHelper.IsUsernameEmpty(Context.Session);
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller=@(isLogged ? "Admin" : "Home")>Pizzeria</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav w-100">
            @if (isLogged)
            {
                <a class="nav-item nav-link" asp-action="Layer" asp-controller="Admin">Layers</a>
                <a class="nav-item nav-link" asp-action="Ingredient" asp-controller="Admin">Ingredients</a>
                <a class="nav-item nav-link" asp-action="Pizza" asp-controller="Admin">Add Pizza</a>
                <a class="nav-item nav-link" asp-action="AllPizzas" asp-controller="Admin">Pizzas</a>
                <a class="nav-item nav-link ml-auto" asp-action="Logout" asp-controller="Admin">Logout</a>
            }
            else
            {
                <a class="nav-item nav-link" asp-action="Index" asp-controller="Home">Pizzas</a>
                <a class="nav-item nav-link" asp-action="MakePizza" asp-controller="Home">Make Pizzas</a>
                <a class="nav-item nav-link ml-auto" asp-action="Login" asp-controller="Admin">Login</a>
            }
        </div>
    </div>
</nav>

