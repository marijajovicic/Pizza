@model (System.Collections.Generic.List<Pizzeria.Models.Layer> Layers, string Error, string ErrorDelete)
@{
    ViewData["Title"] = "Admin Layers";
}

<div class="d-flex justify-content-between align-items-baseline mb-5">
    <h1>Layer</h1>
    <a href="@Url.Action("Index", "Admin")">Go back</a>
</div>
<form method="post" action="AddLayer">
    <h3>Add layer</h3>
    <div class="input-group input-group-lg mb-2">
        <div class="input-group-prepend">
            <span class="input-group-text">Name</span>
        </div>
        <input type="text" class="form-control" name="name" aria-describedby="inputGroup-sizing-sm">
    </div>
   <button type="submit" class="btn btn-primary d-block w-100">Submit</button>
    <p class="text-danger">@Model.Error</p>
</form>

<h3 class="mt-5">Layers</h3>
<p class="text-danger">@Model.ErrorDelete</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead> 
    <tbody>
        @foreach(var layer in Model.Layers)
        {
            <tr>
                <td>@layer.Name</td>
                <td class="col-1">
                    <form asp-action="DeleteLayer" method="post">
                        <input type="hidden" name="id" value="@layer.Id" />
                        <button class="btn btn-danger" type="submit">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>